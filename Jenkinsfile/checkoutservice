library('jenkins-shared') _

def COLOR_MAP = [
    FAILURE: 'danger',
    SUCCESS: 'good',
    UNSTABLE: 'warning'
]

pipeline {
    agent any

    parameters {
        string(name: 'IMAGE_TAG_CHECK', defaultValue: '', description: 'Enter the Checkoutservice Docker image tag')
    }

    tools {
        jdk 'jdk17'
        go 'go1.25'
    }

    environment {
        GOPATH = "${HOME}/go"
        PATH = "${GOPATH}/bin:${PATH}"
        SONAR_EV = tool 'Sonar'
    }

    stages{
        stage('Validate the Parameters') {
            steps {
                script {              
                    if (params.IMAGE_TAG_CHECK == '' ) {
                        error("IMAGE_TAG_CHECK' must be provided and can't be empty.")
                    }
                    echo "--||-----Using tag ${params.IMAGE_TAG_CHECK} -----||--"
                }
            }
        }
        stage('Clean the workspace') {
            steps {
                script {
                    clean_ws()
                }
            }
        }
        stage('Code Clone from Github') {
            steps {
                script {
                    git_clone("https://github.com/NamanSondhiya/google-microservices-DevSecOps.git", "dev")
                }
            }
        }
        stage('Go Security Scan (gosec)') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        sh '''
                        export PATH=$GOPATH/bin:$PATH
                        go install github.com/securego/gosec/v2/cmd/gosec@latest
                        gosec ./... | tee gosec-report.txt
                        '''                    
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/gosec-report.txt'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        sonarqube_analysis("${SONAR_EV}", "checkoutservice", "checkoutservice")
                    }
                }
            }
        }
        stage('Quality Gates') {
            steps {
                script {
                    sonarqube_QualityGate(5, false)
                }
            }
        }
        stage('Go Build') {
            steps {
                dir('src/checkoutservice') {
                    sh '''
                    export PATH=$GOPATH/bin:$PATH
                    go mod tidy
                    go build -o checkoutservice
                    '''
                }
            }
        }
        stage('Go Test') {
            steps {
                dir('src/checkoutservice') {
                    sh '''
                    export PATH=$GOPATH/bin:$PATH
                    go test -v ./... | tee go-test-report.txt
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/go-test-report.txt'
                }
            }
        }
        stage('Owasp Dependency Check') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        owasp_scan()
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/dependency-check-report.xml'
                }
            }
        }
        stage('Trivy Fs Scan') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        trivy_fs_scan()
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/trivy-fs-report.txt'
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker_build("checkoutservice", "${params.IMAGE_TAG_CHECK}", "namanss", "src/checkoutservice")
                }
            }
        }
        stage('Trivy Image Scan') {
            steps {
                script {
                    trivy_image_scan("checkoutservice","${params.IMAGE_TAG_CHECK}","namanss")
                }
            }
            post {
                always {
                    archiveArtifacts 'checkoutservice-trivy-image-report.txt'
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    docker_push("checkoutservice", "${params.IMAGE_TAG_CHECK}", "namanss")
                }
            }
        }
    }
    post {
        always {
            echo 'Slack Notification'
            script {
                def buildStatus = currentBuild.currentResult
                def colorCode = buildStatus == 'SUCCESS' ? '#00FF00' : '#FF0000'
                slackSend(
                    channel: '#jenkins-ci',
                    color: colorCode,
                    message: "Build *${env.JOB_NAME}* #${env.BUILD_NUMBER} finished with status: *${buildStatus}*\n${env.BUILD_URL}"
                )
            }
        }
    }
}