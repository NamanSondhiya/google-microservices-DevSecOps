library('jenkins-shared') _

def COLOR_MAP = [
    'FAILURE' : 'Danger',
    'SUCCESS' : 'Good',
]

pipeline {
    agent any

    parameters {
        string(name: 'IMAGE_TAG_AD', defaultValue: '', description: 'Enter the Adservice Docker image tag')
    }
    
    tools {
        jdk 'jdk17'
        go 'go1.25'
    }

    environment {
        GOPATH = "${HOME}/go"
        PATH = "${GOPATH}/bin:${PATH}"
        SONAR_EV = tool 'Sonar'
    }

    stages{
        stage('Clean the workspace') {
            steps {
                script {
                    clean_ws()
                }
            }
        }
        stage('Code Clone from Github') {
            steps {
                script {
                    git_clone("https://github.com/NamanSondhiya/google-microservices-DevSecOps.git", "devOps")
                }
            }
        }
        stage('Go Security Scan (gosec)') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        sh '''
                        export PATH=$GOPATH/bin:$PATH
                        go install github.com/securego/gosec/v2/cmd/gosec@latest
                        gosec ./... | tee gosec-report.txt
                        '''                    
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/gosec-report.txt'
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        sonarqube_analysis("${SONAR_EV}", "checkoutservice", "checkoutservice")
                    }
                }
            }
        }
        stage('Quality Gates') {
            steps {
                script {
                    sonarqube_QualityGate(5, false)
                }
            }
        }
        stage('Go Build') {
            steps {
                dir('src/checkoutservice') {
                    sh '''
                    export PATH=$GOPATH/bin:$PATH
                    go mod tidy
                    go build -o checkoutservice
                    '''
                }
            }
        }
        stage('Go Test') {
            steps {
                dir('src/checkoutservice') {
                    sh '''
                    export PATH=$GOPATH/bin:$PATH
                    go test -v ./... | tee go-test-report.txt
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/go-test-report.txt'
                }
            }
        }
        stage('Owasp Dependency Check') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        owasp_scan()
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/dependency-check-report.xml'
                }
            }
        }
        stage('Trivy Fs Scan') {
            steps {
                dir('src/checkoutservice') {
                    script {
                        trivy_fs_scan()
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/checkoutservice/trivy-fs-report.txt'
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker_build("checkoutservice", "${BUILD_NUMBER}", "namanss", "src/checkoutservice")
                }
            }
        }
        stage('Trivy Image Scan') {
            steps {
                script {
                    trivy_image_scan("checkoutservice","${BUILD_NUMBER}","namanss")
                }
            }
            post {
                always {
                    archiveArtifacts 'checkoutservice-trivy-image-report.txt'
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    docker_push("checkoutservice", "${BUILD_NUMBER}", "namanss")
                }
            }
        }
    }
}