library('jenkins-shared') _

def COLOR_MAP = [
    FAILURE: 'danger',
    SUCCESS: 'good',
]

pipeline {
    agent any

    parameters {
        string(name: 'IMAGE_TAG_CURR', defaultValue: '', description: 'Enter the Currencyservice Docker image tag')
    }

    tools {
        jdk 'jdk17'
        nodejs 'nodejs20'
    }

    environment {
        SONAR_EV = tool 'Sonar'
    }

    stages{
        stage('Clean the workspace') {
            steps {
                script {
                    clean_ws()
                }
            }
        }
        stage('Code Clone from Github') {
            steps {
                script {
                    git_clone("https://github.com/NamanSondhiya/google-microservices-DevSecOps.git", "dev")
                }
            }
        }
        stage('SonarQube Analysis') {
            steps {
                dir('src/currencyservice') {
                    script {
                        sonarqube_analysis("${SONAR_EV}", "currencyservice", "currencyservice")
                    }
                }
            }
        }
        stage('Quality Gates') {
            steps {
                script {
                    sonarqube_QualityGate(5, false)
                }
            }
        }
        stage('Dependencies Install') {
            steps {
                dir('src/currencyservice') {
                    sh 'npm install'
                }
            }
        }
        stage('Trivy Fs Scan') {
            steps {
                dir('src/currencyservice') {
                    script {
                        trivy_fs_scan()
                    }
                }
            }
            post {
                always {
                    archiveArtifacts 'src/currencyservice/trivy-fs-report.txt'
                }
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    docker_build("currencyservice", "${params.IMAGE_TAG_CURR}", "namanss", "src/currencyservice")
                }
            }
        }
        stage('Trivy Image Scan') {
            steps {
                script {
                    trivy_image_scan("currencyservice","${params.IMAGE_TAG_CURR}","namanss")
                }
            }
            post {
                always {
                    archiveArtifacts 'currencyservice-trivy-image-report.txt'
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    docker_push("currencyservice", "${params.IMAGE_TAG_CURR}", "namanss")
                }
            }
        }
    }
    post {
        always {
            echo 'Slack Notification'
            slackSend (
                channel: '#jenkins-ci',
                color: COLOR_MAP(currentBuild.currentResult),
                message: "${currentBuild.currentResult}: Job ${env.JOB_NAME} build: ${env.BUILD_NUMBER}"
            )
        }
    }
}